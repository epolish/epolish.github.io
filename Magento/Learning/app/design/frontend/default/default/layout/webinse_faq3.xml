<layout>
    <faq3_index_getallfaq>
        <reference name="head">
            <action method='setTitle'><title>Frequently Asked Questions</title></action>
            <action method="addJs"><script>webinse/faq3/app.js</script></action>
        </reference>
        
        <reference name="content">
            <remove name="right"/>
            <remove name="left"/>
            <block type="webinse_faq3/faq" name="all.faq" as="all.faq" template="webinse_faq3/view.phtml" />
        </reference>
    </faq3_index_getallfaq>
    
    <faq3_index_addnewfaq>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference>
        
        <reference name="head">
            <action method='setTitle'><title>Add New Question</title></action>
        </reference>
        
        <reference name="content">
            <block type="webinse_faq3/faq" name="all.faq" as="all.faq" template="webinse_faq3/form.phtml" />
        </reference>
    </faq3_index_addnewfaq>

    <faq3_index_editfaq>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        
        <reference name="head">
            <action method='setTitle'><title>Edit Question</title></action>
        </reference>
        
        <reference name="content">
            <block type="webinse_faq3/faq" name="all.faq" as="all.faq" template="webinse_faq3/form.phtml" />
        </reference>
    </faq3_index_editfaq>
</layout>
